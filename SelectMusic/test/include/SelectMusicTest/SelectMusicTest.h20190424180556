  // <rtc-template block="private_attribute">
  
  // </rtc-template>

  // <rtc-template block="private_operation">
  
  // </rtc-template>

};


extern "C"
{
  DLL_EXPORT void SelectMusicTestInit(RTC::Manager* manager);
};

#endif // SELECTMUSIC_TEST_H
